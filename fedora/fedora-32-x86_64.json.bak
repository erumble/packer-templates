{
  "variables": {
    "build_directory": "{{template_dir}}/../builds",
    "cpus": "1",
    "description": "None Provided",
    "disk_size": "20480",
    "ks_file": "fedora-32.cfg",
    "iso_url": "http://download.fedoraproject.org/pub/fedora/linux/releases/32/Server/x86_64/iso/Fedora-Server-dvd-x86_64-32-1.6.iso",
    "iso_checksum": "cd2aefdbe1b5042865a39c49d32f5d21a9537c719aa87dde34d08ca06bc6681c",
    "iso_checksum_type": "sha256",
    "memory": "1024",
    "template": "fedora-32-x86_64",
    "vagrant_cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}",
    "version": "{{timestamp}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "boot_wait": "10s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Fedora_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "{{template_dir}}/http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-virtualbox",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_timeout": "10000s",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `template` }}"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "{{template_dir}}/scripts/swap.sh",
        "{{template_dir}}/scripts/fix-slow-dns.sh",
        "{{template_dir}}/scripts/build-tools.sh",
        "{{template_dir}}/scripts/install-supporting-packages.sh",
        "{{template_dir}}/../common/scripts/motd.sh",
        "{{template_dir}}/../common/scripts/sshd.sh",
        "{{template_dir}}/../common/scripts/vagrant.sh",
        "{{template_dir}}/../common/scripts/virtualbox.sh",
        "{{template_dir}}/scripts/cleanup.sh",
        "{{template_dir}}/../common/scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "output": "{{ user `build_directory` }}/{{user `template`}}.{{.Provider}}.box",
        "type": "vagrant"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "erumble/fedora32-x64",
        "version": "{{user `version`}}",
        "access_token": "{{user `vagrant_cloud_token`}}",
        "version_description": "{{user `description`}}"
      }
    ]
  ]
}
