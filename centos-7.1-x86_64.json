{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_mirror`}}/{{user `iso_directory`}}/{{user `iso_name`}}",
      "output_directory": "packer-{{user `vm_name`}}-virtualbox",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-{{user `vm_name`}}"
    }
  ],
  "post-processors": [
    {
      "output": "./builds/{{.Provider}}/{{user `vm_name`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/build-scripts/fix-slow-dns.sh",
        "scripts/build-scripts/sshd.sh",
        "scripts/build-scripts/vagrant.sh",
        "scripts/build-scripts/vmtools.sh",
        "scripts/build-scripts/cleanup.sh",
        "scripts/build-scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "vm_name": "centos-7.1",
    "ks_path": "centos-7.1",
    "iso_mirror": "http://isoredirect.centos.org",
    "iso_directory": "centos/7/isos/x86_64",
    "iso_name": "CentOS-7-x86_64-DVD-1503-01.iso",
    "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
    "iso_checksum_type": "sha256"
  }
}

