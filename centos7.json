{
  "variables": {
    "iso_url": "http://mirror.nodesdirect.com/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-1611.iso",
    "iso_checksum": "c455ee948e872ad2194bdddd39045b83634e8613249182b88f549bb2319d97eb",
    "iso_checksum_type": "sha256",
    "vagrant_cloud_access_token": "{{env `VAGRANT_CLOUD_ACCESS_TOKEN`}}",
    "description": "None Provided",
    "version": "1.0.{{timestamp}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.cfg<enter><wait>"
      ],
      "headless": true,
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/networking.sh",
        "scripts/sshd.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/sudoersd.sh",
        "scripts/selinux.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "centos7-x64.{{.Provider}}.{{isotime \"20060102-150405\"}}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "erumble/centos7-x64",
        "version": "{{user `version`}}",
        "access_token": "{{user `vagrant_cloud_access_token`}}",
        "version_description": "{{user `description`}}"
      }
    ]
  ]
}

